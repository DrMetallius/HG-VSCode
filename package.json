{
	"name": "mercurial",
	"publisher": "malcolm-soft",
	"displayName": "Mercurial",
	"description": "Mercurial SCM support",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.11.1"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/src/main",
	"scripts": {
		"vscode:prepublish": "tsc -p ./",
		"compile": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install"
	},
	"contributes": {
		"commands": [
			{
				"command": "hg.clone",
				"title": "%command.clone%",
				"category": "Hg"
			}
		],
		"menus": {
			"commandPalette": [
				{
					"command": "hg.clone",
					"when": "config.hg.enabled"
				}
			]
		},
		"configuration": {
			"title": "Mercurial",
			"properties": {
				"hg.enabled": {
					"type": "boolean",
					"description": "%config.enabled%",
					"default": true
				}
			}
		}
	},
	"dependencies": {
		"vscode-nls": "^2.0.2"
	},
	"devDependencies": {
        "typescript": "^2.2.2",
        "vscode": "^1.1.0",
        "@types/node": "^7.0.12"
	}
}